<!-- EJS template for a new or updated user form -->

<!--  form handling  -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" placeholder="John Doe">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="phone_number" class="text-light">Phone Number</label>
            <input type="text" name="phone_number" placeholder="123-456-7890">
        </div>
        <div class="form-group">
            <label for="board_ID" class="text-light">Board ID</label>
            <input type="text" name="board_ID" placeholder="#0000">
        </div>
        <div class="form-group">
            <label for="time_out" class="text-light">Time out</label>
            <input type="text" name="time_out" placeholder="00:00">
        </div>
        <div class="form-group">
            <label for="time_in" class="text-light">Time in </label>
            <input type="text" name="time_in" placeholder="00:00">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>