<!-- EJS template for update_user form -->

<!-- inlcude header -->
<%- include('include/_header') %>
<!-- /inlcude header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>All User</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <span class="text-light">Use the form below to update an new account</span>
            </div>

            <!--  add user form  -->
                        <!--  form handling  -->
                        <form method="POST" id="update_user">
                            <div class="new_user">
                                <div class="form-group">
                                    <label for="name" class="text-light">Name</label>
                                    <input type="hidden" name="id" value="<%= user._id %>">
                                    <input type="text" name = "name" value= "<%= user.name %>" placeholder="John Doe">
                                </div>
                                <div class="form-group">
                                    <label for="email" class="text-light">Email</label>
                                    <input type="text" name="email" value="<%= user.email %>" placeholder="example@gmail.com">
                                </div>
                                <div class="form-group">
                                    <label for="phone_number" class="text-light">Phone Number</label>
                                    <input type="text" name="phone_number" value="<%= user.phone_number %>"  placeholder="123-456-7890">
                                </div>
                                <div class="form-group">
                                    <label for="board_ID" class="text-light">Board ID</label>
                                    <input type="text" name="board_ID" value="<%= user.board_ID %>"  placeholder="#0000">
                                </div>
                                <div class="form-group">
                                    <label for="time_out" class="text-light">Time out</label>
                                    <input type="text" name="time_out" value="<%= user.time_out %>"  placeholder="00:00">
                                </div>
                                <div class="form-group">
                                    <label for="time_in" class="text-light">Time in </label>
                                    <input type="text" name="time_in" value="<%= user.time_in %>" placeholder="00:00">
                                </div>
            
                                <div class="form-group">   
                                    <button type="submit" class="btn text-dark update">Save</button>
                                </div>
                            </div>
                        </form>

        </div>
    </main>
<!-- Main Site -->

<!-- inlcude footer -->
<%- include('include/_footer') %>
<!-- /inlcude footer -->